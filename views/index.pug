extends layout

block content
  div.row
    div.col-sm
      h1= title
      p A basic calculator.
  // Top row
  div(id='out') 0
  // 5th row
  div(class='btn-calc btn-func' id='btnClear') AC
  div(class='btn-calc btn-func' id='btnPolarity') +/-
  div(class='btn-calc btn-func' id='btnPercent') %
  div(class='btn-calc btn-op' id='btnDivide') /
  br
  // 4th row
  div(class='btn-calc btn-num' id='btnSeven') 7
  div(class='btn-calc btn-num' id='btnEight') 8
  div(class='btn-calc btn-num' id='btnNine') 9
  div(class='btn-calc btn-op' id='btnMulti') X
  br
  // 3rd row
  div(class='btn-calc btn-num' id='btnFour') 4
  div(class='btn-calc btn-num' id='btnFive') 5
  div(class='btn-calc btn-num' id='btnSix') 6
  div(class='btn-calc btn-op' id='btnMinus') -
  br
  // 2nd row
  div(class='btn-calc btn-num' id='btnOne') 1
  div(class='btn-calc btn-num' id='btnTwo') 2
  div(class='btn-calc btn-num' id='btnThree') 3
  div(class='btn-calc btn-op' id='btnPlus') +
  br
  // Bottom row
  div(class='btn-calc btn-zero' id='btnZero') 0
  div(class='btn-calc btn-num' id='btnDec') .
  div(class='btn-calc btn-op' id='btnEquals') =
  br
